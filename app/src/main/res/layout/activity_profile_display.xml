<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.htwds.mada.foodsharing.ProfileDisplayActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/profile_title_tv"
            android:id="@+id/profile_title_tv"
            android:layout_weight="1"
            android:gravity="center" />
        </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_last_name_tv"
                    android:id="@+id/profile_edit_last_name_tv"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_first_name_tv"
                    android:id="@+id/profile_edit_first_name_tv"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_street_address_et"
                    android:id="@+id/profile_edit_street_address_et"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_street_address_no_et"
                    android:id="@+id/profile_edit_street_address_no_et"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_zipcode_et"
                    android:id="@+id/profile_edit_zipcode_et"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_place_of_res_et"
                    android:id="@+id/profile_edit_place_of_res_et"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_displ_country_tv"
                    android:id="@+id/profile_displ_country_tv"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_phone_et"
                    android:id="@+id/profile_edit_phone_et"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_edit_email_et"
                    android:id="@+id/profile_edit_email_et"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingTop="15dp"
                android:layout_weight="1"
                android:paddingBottom="25dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_display_username_tv"
                    android:id="@+id/profile_display_username_tv"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_display_password_tv"
                    android:id="@+id/profile_display_password_tv"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:singleLine="true" />
            </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_display_edit_btn"
            android:id="@+id/profile_display_edit_btn"
            android:layout_weight="1"
            android:onClick="profileDisplay"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_display_show_tr_history"
            android:id="@+id/profile_edit_show_tr_history"
            android:layout_weight="1"
            android:textSize="12sp"
            android:onClick="profileDisplay"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_display_cancle_btn"
            android:id="@+id/profile_display_cancel_btn"
            android:layout_weight="1"
            android:onClick="profileDisplay"/>
    </LinearLayout>

</LinearLayout>
