<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.htwds.mada.foodsharing.OfferEditActivity"
    android:orientation="vertical"
    android:background="@android:color/holo_green_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer details"
            android:id="@+id/offerDisplayTitle"
            android:textSize="25sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="120dp"
            android:minWidth="120dp"
            android:id="@+id/offerDisplayPicture"
            android:visibility="visible"
            android:background="@drawable/ic_action_camera"
            android:clickable="true"
            android:nestedScrollingEnabled="false"
            android:longClickable="false"
            android:contentDescription="Photo of the offering" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/offer_display_best_before_tv"
            android:id="@+id/offer_display_best_before_tv"
            android:layout_weight="1"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/offer_display_pick_up_tv"
            android:id="@+id/offer_display_pick_up_tv"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/offer_category_tv"
            android:id="@+id/offer_category_tv"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_display_short_description_tv"
            android:id="@+id/offer_display_short_description_tv"
            android:textSize="15sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailed_description_tv"
                android:id="@+id/detailed_description_tv"
                android:textSize="15sp"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textStyle="bold" />
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_display_get_location_tv"
            android:id="@+id/offer_display_get_location_tv"
            android:textSize="15sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />
    </LinearLayout>

<!--    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_display_contact_info_tv"
            android:id="@+id/offer_display_contact_info_tv"
            android:textSize="15sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />

    </LinearLayout>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date added"
            android:id="@+id/offerDisplayDateAdded"
            android:textSize="15sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/offer_display_contact_info_tv"
            android:id="@+id/offer_display_contact_info_tv"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:background="@color/blue06"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold"
            android:onClick="showContactInfo" />

    </LinearLayout>


</LinearLayout>
